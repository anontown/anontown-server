{
  "name": "anontown-server",
  "version": "1.0.0",
  "dependencies": {
    "array-range": "^1.0.1",
    "body-parser": "^1.15.2",
    "cron": "^1.2.1",
    "crypto-js": "^3.1.9-1",
    "elasticsearch": "^13.3.1",
    "express": "^4.14.0",
    "fs-extra": "^5.0.0",
    "fs-promise": "^1.0.0",
    "graphql": "^0.13.2",
    "graphql-server-express": "^1.3.6",
    "graphql-subscriptions": "^0.5.8",
    "graphql-tools": "^3.0.2",
    "immutable": "^4.0.0-rc.9",
    "jsonschema": "^1.1.0",
    "jsonwebtoken": "^7.4.1",
    "log4js": "^1.1.0",
    "mongodb": "^2.2.11",
    "request": "^2.79.0",
    "rxjs": "^5.4.0",
    "source-map-support": "^0.4.6",
    "subscriptions-transport-ws": "^0.9.11",
    "ts-copyable": "0.0.3",
    "typelevel-ts": "^0.2.3",
    "ws": "^2.3.1"
  },
  "devDependencies": {
    "@types/body-parser": "0.0.33",
    "@types/cron": "^1.0.30",
    "@types/crypto-js": "^3.1.33",
    "@types/elasticsearch": "^5.0.16",
    "@types/express": "^4.0.34",
    "@types/fs-extra": "^5.0.1",
    "@types/fs-promise": "^1.0.1",
    "@types/graphql": "^0.13.1",
    "@types/jest": "^21.1.9",
    "@types/jsonschema": "0.0.4",
    "@types/jsonwebtoken": "^7.2.0",
    "@types/log4js": "0.0.32",
    "@types/mongodb": "^2.1.35",
    "@types/node": "^6.0.51",
    "@types/request": "0.0.39",
    "@types/ws": "0.0.41",
    "jest": "^22.0.4",
    "sloc": "^0.2.0",
    "ts-jest": "^22.0.0",
    "tslint": "^5.8.0",
    "typescript": "^2.8.1"
  },
  "scripts": {
    "build": "tsc",
    "start": "node ./dist/app.js",
    "test": "jest",
    "lint": "tslint -p tsconfig.json -c tslint.json 'src/**/*.ts'",
    "lint:fix": "tslint -p tsconfig.json -c tslint.json 'src/**/*.ts' --fix",
    "loc": "sloc --format cli-table ./src"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/src/**/*.spec.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coverageReporters": [
      "html",
      "json"
    ]
  }
}
